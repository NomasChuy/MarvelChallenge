<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/ivHeroImage"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noimagefoundmarvel"
        android:contentDescription="@string/character_image_description" />

    <TextView
        android:id="@+id/tvHeroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHeroImage"
        tools:text="Character" />

    <TextView
        android:id="@+id/tvHeroDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeroName"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeroName"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description" />

    <Button
        android:id="@+id/btnHeroSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvHeroDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/series_button"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnHeroComics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvHeroDescription"
        app:layout_constraintEnd_toStartOf="@+id/btnHeroDetails"
        app:layout_constraintStart_toEndOf="@+id/btnHeroSeries"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/comics_button"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnHeroDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvHeroDescription"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/detail_button"
        android:textColor="@color/white" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>